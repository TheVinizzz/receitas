                                            "example": 1
                                        },
                                        "nome": {
                                            "type": "string",
                                            "example": "Sobremesas"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
