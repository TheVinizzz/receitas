                                            },
                                            "id_categorias": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "id_usuarios": {
                                                "type": "integer",
                                                "example": 1
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
